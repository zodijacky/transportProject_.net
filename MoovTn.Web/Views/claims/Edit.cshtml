@model MoovTn.Domain.Models.Claim
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit your claim</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)


    <div class="form-group">
        @Html.LabelFor(model => model.question, "Question or Claim", htmlAttributes: new { @class = "control-label col-md-2" ,  @id="couleur"})
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.question, new { cols = 45, @rows = 6 })
            @Html.ValidationMessageFor(model => model.question, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Edit" class="btn icon-btn btn-success" />
            <a class="btn icon-btn btn-info" href="@Url.Content("/claims/Index/")"><span class="glyphicon btn-glyphicon glyphicon-share img-circle text-info"></span>Back to list</a>

        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section Styles {
<style>
    #couleur {
        color: white;
    }
</style>}